{
  "name": "luzz-monorepo",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "build": "pnpm --filter api build",
    "dev": "pnpm --filter api dev",
    "lint": "pnpm exec eslint api/src --ext .ts --fix",
    "typecheck": "pnpm --filter api typecheck",
    "test": "pnpm --filter api test:run",
    "test:coverage": "pnpm --filter api test:coverage",
    "format": "prettier --config prettier.config.mjs --ignore-unknown --write ."
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.6",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte-check": "^4.3.1",
    "turbo": "^2.1.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "vite": "^6.3.5"
    }
  }
}
